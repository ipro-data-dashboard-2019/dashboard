doctype html
html.h-100
  head
    title= BEAN
    link(rel='stylesheet', href='/css/bootstrap.min.css')
  body.h-100
    header
      nav.navbar.navbar-default
        div.container-fluid
          div.col-3.text-left
            a(href='#storiesORabout') About
          div.col-6.text-center
            div#logo
          div.col-3.text-right
            a(href='#accountSettings') Account
    main.h-100.container-fluid
      div.row.h-100
        div#leftbar.col-3.bg-success.container
          block leftcontent
        div#mainbar.col-6.h-100
          div.h-75.bg-primary#maincontent.overflow-auto.container.px-0
            block maincontent
          div.h-25.bg-secondary#linkcontent.container
            block linkcontent
        div#rightbar.col-3.bg-danger.container
          block rightcontent
